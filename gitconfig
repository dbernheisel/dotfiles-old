[alias]
	graph = log --graph --all --pretty=format:'%C(yellow)%h%C(cyan)%d%Creset %s %C(white)- %an, %ar%Creset'
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cblue%an%Creset %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
  s = status
  aa = add --all
  ca = commit --amend
  co = checkout
  dm = diff master
  uf = reset --hard HEAD
  rc = rebase --continue
  up = !git fetch origin && git rebase origin/master
