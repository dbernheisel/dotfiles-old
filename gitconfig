[user]
  name = David Bernheisel
  email = david@bernheisel.com
[color]
  ui = auto
[interactive]
  diffFilter = diff-so-fancy --patch-mode
[credential]
  helper = osxkeychain
[push]
  default = current
[filter "lfs"]
  required = true
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  clean = git-lfs clean -- %f
[filter "media"]
  clean = git-media-clean %f
  smudge = git-media-smudge %f
[alias]
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cblue%an%Creset %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
  s = status
  aa = add --all
  ca = commit --amend
  co = checkout
  dm = diff master
  uf = reset --hard HEAD
  up = !git fetch origin && git rebase origin/master
  undeployed = !git fetch production && git diff origin/master production/master
  ctags = "!sh -c '[ -f .git/hooks/ctags ] || git init; .git/hooks/ctags' git-ctags"
[core]
  compression = -1
  autocrlf = input
  excludesfile = ~/.gitignore
  pager = diff-so-fancy | less --tabs=4 -RX
[fetch]
  prune = true
[diff]
  tool = vimdiff
[difftool "vscode"]
  cmd = code --wait --diff \"$LOCAL\" \"$REMOTE\"
[difftool "sourcetree"]
  cmd = opendiff \"$LOCAL\" \"$REMOTE\"
  path =
[format]
  pretty = %C(yellow)%h%Creset %s %C(red)(%an, %cr)%Creset
[merge]
  tool = vimdiff
  conflictstyle = diff3
  ff = only
[mergetool "vimdiff"]
  cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[mergetool "sourcetree"]
  cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
  trustExitCode = true
[commit]
  template = ~/dotfiles/gitmessage
[http]
  postBuffer = 157286400
[url "ssh://git@github.com/"]
  insteadOf = https://github.com/
[url "ssh://git@heroku.com/"]
  insteadOf = https://git.heroku.com/
[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = red bold 52
  newNormal = green bold
  newHighlight = green bold 22
[color "diff"]
  meta = 227
  frag = yellow bold
  commit = 227 bold
  old = red bold
  new = green bold
  whitespace = red reverse
  oldMoved = 141 bold
  newMoved = 39 bold
